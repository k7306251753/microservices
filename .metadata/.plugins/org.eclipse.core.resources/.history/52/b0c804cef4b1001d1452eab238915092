spring:
  application:
    name: GATEWAY-SERVICE
  cloud:
    gateway:
      routes:
      - id: order-service
        uri: lb://ORDER-SERVICE
        predicates: 
            - path=/order/**
      - id: payment-service
        uri: lb://PAYMENT-SERVICE
        predicates: 
          - path=/payment/**

          
server:
  port: 8083
eureka:
    client:
     register-with-eureka: true
     fetch-registry: true
     service-url:
      defaultZone: ${eureka_url:http://192.168.217.81:8761/eureka}
    instance:
        hostname:192.168.217.81
        prefer-ip-address: true
      
      
      
      

   